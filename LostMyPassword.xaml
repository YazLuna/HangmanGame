<Window x:Class="hangmanGame.LostMyPassword"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:p = "clr-namespace:hangmanGame.Properties"
        xmlns:local="clr-namespace:hangmanGame"
        Title="{x:Static p:Resources.TitleRecoverAccount}" Height="473.196" Width="829.381" Background="#FFCFF6FF">
    <Grid Margin="0,0,2,-2">
        <Label Margin="323,52,278,340" Style="{StaticResource headerTextStyle}" Content = "{x:Static p:Resources.TitleRecoverAccount}" Width="218" Height="52"/>
        <Label Margin="137,144,0,0" Style="{StaticResource labelStyle}" Content = "{x:Static p:Resources.Email}" />
        <Label Margin="137,244,0,0" Style="{StaticResource labelStyle}" Content = "{x:Static p:Resources.ValidateEmail}" />
        <TextBox Name="tbEmail"  Margin="381,144,136,264" ></TextBox>
        <TextBox Name="tbValidateEmail" Margin="381,245,136,163" ></TextBox>
        <Button Name ="btnCancel" Margin="529,331,181,0" Style="{StaticResource buttonCancel}" Content = "{x:Static p:Resources.Cancel_Button}" Click="Cancel" Width="109"/>
        <Button Name ="btnSendCode" Margin="192,331,382,0" Style="{StaticResource buttonOk}" Content = "{x:Static p:Resources.RecoveryCode_Button}" Click="SendRecoveryCode" Width="245" Height="49"/>
    </Grid>
</Window>
