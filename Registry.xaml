<Window x:Class="hangmanGame.Registry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:p = "clr-namespace:hangmanGame.Properties"
        xmlns:local="clr-namespace:hangmanGame"
        Title="{x:Static p:Resources.TitleRegistry}" Height="700" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="239*"/>
        </Grid.ColumnDefinitions>

        <Label Margin="219,34,303,582" Grid.Column="1" Style="{StaticResource headerTextStyle}" Content = "{x:Static p:Resources.TitleRegistry}" Height="53"/>
        <Label Margin="142,111,0,0" Grid.Column="1" Style="{StaticResource labelStyle}" Content = "{x:Static p:Resources.Name}" Height="49"/>
        <Label Margin="99,178,0,0" Grid.Column="1" Style="{StaticResource labelStyle}" Content = "{x:Static p:Resources.LastName}" Height="49"/>
        <Label Margin="100,246,0,0" Grid.Column="1" Style="{StaticResource labelStyle}" Content = "{x:Static p:Resources.NickName}" Height="51"/>
        <Label Margin="147,317,0,0" Grid.Column="1" Style="{StaticResource labelStyle}" Content = "{x:Static p:Resources.Email}" Height="49"/>
        <Label Margin="110,385,0,0" Grid.Column="1" Style="{StaticResource labelStyle}"  Content = "{x:Static p:Resources.Password}" Height="56"/>
        <TextBox Margin="238,111,279,523" Grid.Column="1"></TextBox>
        <TextBox Margin="238,180,279,454" Grid.Column="1"></TextBox>
        <TextBox Margin="238,246,279,388" Grid.Column="1"></TextBox>
        <TextBox Margin="238,317,279,317" Grid.Column="1"></TextBox>
        <TextBox Margin="238,387,279,247" Grid.Column="1"></TextBox>
        <Button Grid.Column="1" Margin="117,494,450,125" Style="{StaticResource buttonCancel}" Content = "{x:Static p:Resources.Register_Button}"></Button>
        <Button Grid.Column="1" Margin="397,494,170,125" Style="{StaticResource buttonRegister}" Content = "{x:Static p:Resources.Cancel_Button}"></Button>
    </Grid>
</Window>
