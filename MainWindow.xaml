<Window x:Class="hangmanGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:p = "clr-namespace:hangmanGame.Properties"
        xmlns:local="clr-namespace:hangmanGame"
        Title="{x:Static p:Resources.TitleLogIn}" Height="450" Width="800">
    <Grid>

        <Label Margin="336,55,366,311"  Style="{StaticResource headerTextStyle}" Content = "{x:Static p:Resources.TitleLogIn}" Height="53"></Label>
        <Label Margin="245,133,0,0" Style="{StaticResource labelStyle}" Content = "{x:Static p:Resources.Email}" Width="66"></Label>
        <Label Margin="202,190,0,0" Style="{StaticResource labelStyle}" Content = "{x:Static p:Resources.Password}" Height="42"></Label>
        <TextBox Margin="316,141,254,249"></TextBox>
        <TextBox Margin="316,203,254,187"></TextBox>
        <Button Margin="316,292,366,79" Style="{StaticResource buttonLogIn}" Content = "{x:Static p:Resources.TitleLogIn}" Click="Button_Click"></Button>
    </Grid>
</Window>
